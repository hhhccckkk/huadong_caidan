    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >
    <Button 
        android:onClick="updateDate"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="measuring"
        android:id="@+id/r_measuring_bt"
        />
<Button 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="coaching"
        android:id="@+id/r_coaching_bt"
        /><Button 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="friends"
        android:id="@+id/r_friends_bt"
        /><Button 
       android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="remote"
        android:id="@+id/r_remote_bt"
        /><Button 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="logout"
        android:id="@+id/r_logout_bt"
        />
</LinearLayout>
